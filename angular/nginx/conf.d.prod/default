worker_processes  4;

events {
    worker_connections  1024;
}

http {
    server {
        listen 443 ssl;
        server_name  panomicon.nibiohn.go.jp;
        ssl_certificate /etc/nginx/cert/xxx.crt
        ssl_certificate_key /etc/nginx/cert/xxx.key

        root   /usr/share/nginx/html;
        index  index.html index.htm;
        include /etc/nginx/mime.types;

        gzip on;
        gzip_min_length 1000;
        gzip_proxied expired no-cache no-store private auth;
        gzip_types text/plain text/css application/json application/javascript application/x-javascript text/xml application/xml application/xml+rss text/javascript;

        location / {
            try_files $uri $uri/ /index.html;
        }

        # Reverse proxy for angular to talk to scalatra
        location /json {
            proxy_pass http://scalatra:8888;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host:4200;
            proxy_cache_bypass $http_upgrade;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

        }
    }

     server {
        listen 443 ssl;
        server_name  panomicon-auth.nibiohn.go.jp;
        ssl_certificate /etc/nginx/cert/xxx.crt
        ssl_certificate_key /etc/nginx/cert/xxx.key

        # Forward all requests to fusionauth
        location / {
            proxy_pass http://fusionauth:9011;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $host;
            proxy_http_version 1.1;
            proxy_set_header X-Forwarded-Proto $scheme;
       }
    }

}
