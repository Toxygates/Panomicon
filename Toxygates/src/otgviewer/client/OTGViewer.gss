/**************************************	
Data sources information
**************************************/
.metadata-info {
	margin: 5px;
}

.metadata-info-title {
	font-size: 1.1em;
	font-weight: bold;
	margin: 0.5em;
	margin-right: 3em;
}

.metadata-info-heading {
	font-size: 1.2em;
	font-weight: bold;
	margin: 0.5em;
	border-top: solid black 1px;
	border-bottom: solid black 1px;
}

.metadata-info-comment {
	margin: 0.5em;
