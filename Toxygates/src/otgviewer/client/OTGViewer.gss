	color: red;
	font-weight: bold;
	width: 10em;
}

.numericalParameterBelow {
	color: blue;
	font-weight: bold;
	width: 10em;
}

.numericalParameterPathological {
	color: red;
	width: 10em;
}

.numericalParameterHealthy {
	
}

.sampleDetailTitleColumn {
	width: 15em;
}

.sampleDetailDataColumn {
	width: 10em;
}

/******************************************************************************	
Non-semantic 
******************************************************************************/
.slightlySpaced {
	margin: 2px;
}

.slightlySpacedLeftRight {
	margin-left: 2px;
	margin-right: 2px;
}

.colored {
	background: MENUBARITEM_COLOR;
}

.heading {
	font-size: 1.2em;
	color: #777;
	margin: 5px;
	text-align: center;
}

.emphasized {
	font-weight: bold;
}

.clickCell {
	cursor: pointer;
}

.table-cell {
	display: table-cell;
}

.width-fix {
	padding-right: 10px;
}

/******************************************************************************	
Miscellaneous
******************************************************************************/
::-webkit-scrollbar {
	width: 7px;
	height: 7px;
}

::-webkit-scrollbar-thumb {
	width: 7px;
	height: 7px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
	background: rgba(0, 0, 0, 0.3);
}