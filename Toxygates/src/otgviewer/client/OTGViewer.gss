}

.Group1 {
	color: #7ac653;
}

.Group2 {
	color: #c3534d;
}

.Group3 {
	color: #90c1ab;
}

.Group4 {
	color: #504239;
}

.Group5 {
	color: #c1a54a;
}

.Group6 {
