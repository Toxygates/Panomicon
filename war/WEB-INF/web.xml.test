<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->

	<servlet>
		<servlet-name>sparqlServlet</servlet-name>
		<servlet-class>otgviewer.server.SparqlServiceImpl</servlet-class>
		<init-param>
			<param-name>owlimRepositoryName</param-name>
			<param-value>otg-test</param-value>
		</init-param>
		<init-param>
			<param-name>toxygatesHomeDir</param-name>
			<param-value>/opt/toxygates-test</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>seriesServlet</servlet-name>
		<servlet-class>otgviewer.server.SeriesServiceImpl</servlet-class>
		<init-param>
			<param-name>owlimRepositoryName</param-name>
			<param-value>otg-test</param-value>
		</init-param>
		<init-param>
			<param-name>toxygatesHomeDir</param-name>
			<param-value>/opt/toxygates-test</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>kcServlet</servlet-name>
		<servlet-class>otgviewer.server.KCServiceImpl</servlet-class>
		<init-param>
			<param-name>owlimRepositoryName</param-name>
			<param-value>otg-test</param-value>
		</init-param>
		<init-param>
			<param-name>toxygatesHomeDir</param-name>
			<param-value>/opt/toxygates-test</param-value>
		</init-param>
		<init-param>
			<param-name>csvDir</param-name>
			<param-value>/opt/apache-tomcat-6.0.36/webapps/toxygates/csv</param-value>
		</init-param>
		<init-param>
			<param-name>csvUrlBase</param-name>
			<param-value>http://toxygates.nibio.go.jp:8080/toxygates/csv</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>sparqlServlet</servlet-name>
		<url-pattern>/toxygates/sparql</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>seriesServlet</servlet-name>
		<url-pattern>/toxygates/series</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>kcServlet</servlet-name>
    <url-pattern>/toxygates/KC</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>toxygates.html</welcome-file>
  </welcome-file-list>

<security-constraint>
  <web-resource-collection>
     <web-resource-name>Toxygates (Adjuvant test version)</web-resource-name>
     <url-pattern>/*</url-pattern>
  </web-resource-collection>
  <auth-constraint>
    <role-name>toxygates-test</role-name>
  </auth-constraint>
</security-constraint>

<login-config>
  <auth-method>BASIC</auth-method>
  <realm-name>Toxygates (Adjuvant test)</realm-name>
</login-config>

</web-app>
